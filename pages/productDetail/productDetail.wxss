/* pages/productDetail/productDetail.wxss */
.product-pic .item {
  height: 500rpx;
}

.product-title {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 7rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
  padding: 30rpx;
}

.product-title .title-name {
  color: #2A2A2A;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.product-title .title-second {
  color: #999999;
  font-size: 22rpx;
  margin-bottom: 39rpx;
}

.product-title .product-money-text {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.product-title .product-money-text .money {
  font-size: 46rpx;
  color: #FF2522;
  font-weight: bold;
}

.product-title .product-money-text .money .rmb {
  font-size: 30rpx;
  margin-right: 5rpx;
}

.product-title .product-money-text .sum {
  font-size: 28rpx;
  color: #999999;
}

.product-detail {
  background: #fff;
  margin-top: 20rpx;
}

.product-detail .title {
  padding: 25rpx 28rpx;
  font-size: 28rpx;
  color: #3390FF;
  font-family: Source Han Sans CN;
  font-weight: 500;
}

.product-detail .title .line {
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background: rgba(51, 144, 255, 1);
  border-radius: 3rpx;
  vertical-align: middle;
  margin-right: 18rpx;
  margin-top: -5rpx;
}

.product-detail .detail {
  padding-left: 52rpx;
}

.product-detail .detail .item {
  color: #2A2A2A;
  font-size: 28rpx;
  margin-bottom: 39rpx;
}

.product-detail .detail .item .name {
  display: inline-block;
  color: #999999;
  width: 145rpx;
}

.product-footer {
  width: 100%;
  position: fixed;
  z-index: 2;
  bottom: 0;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 0;
  box-shadow: 0px 7px 27px 0px rgba(0, 0, 0, 0.12);
}

.product-footer .back-btn:active,
.product-footer .cart-btn:active {
  opacity: 0.5;
}

.product-footer .back-btn,
.product-footer .cart-btn {
  border-radius: 39rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: normal;
  width: 315rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-footer .back-btn {
  margin-left: 20rpx;
  background: rgba(181, 181, 181, 1);
  margin-right: 20rpx;
}

.product-footer .cart-btn {
  margin-right: 20rpx;
  background: rgba(51, 144, 255, 1);
  margin-left: 20rpx;
}

.product-footer .back-btn .icon,
.product-footer .cart-btn .icon {
  width: 42rpx;
  height: 38rpx;
  margin-right: 19rpx;
}

.selsect-norms {
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 4;
  height: 1004rpx;
  background: #fff;
  border-radius: 10rpx 10rpx 0px 0px;
  padding-top: 50rpx;
  padding-bottom:30rpx;
}

.selsect-norms .product {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}

.selsect-norms .product .pic {
  min-width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #FF2522;
  margin-right: 20rpx;
}
.pic image{
  width: 100%;
  height: 100%;
}

.selsect-norms .product .detail {
  width: 100%;
}

.selsect-norms .product .detail .title {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.selsect-norms .product .detail .title .name {
  font-size: 32rpx;
  color: #2A2A2A;
  font-weight: 500;
}

.selsect-norms .product .detail .title .clear {
  font-size: 24rpx;
}

.selsect-norms .product .detail .title .clear .list-clear {
  width: 24rpx;
  height: 25rpx;
  vertical-align: middle;
  margin-top: -6rpx;
}

.selsect-norms .product .detail .yisuan {
  color: #666666;
  font-size: 20rpx;
  margin-bottom: 14rpx;
}

.selsect-norms .product .detail .money {
  color: #FF2522;
  font-size: 36rpx;
}

.selsect-norms .product .detail .money .rmb {
  font-size: 24rpx;
  margin-right: 5rpx;
}

.selsect-norms .material-selection-box {
  margin-top: 40rpx;
  max-height: 366px;
}

.selsect-norms .material-selection-box .selection-list {
  margin: 0 29rpx;
  margin-bottom: 29rpx;
}

.selsect-norms .material-selection-box .selection-list .title {
  font-size: 24rpx;
  color: #666666;
}

.selsect-norms .material-selection-box .selection-list .list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.selsect-norms .material-selection-box .selection-list .list .item {
  width: 60%;
  height: 60rpx;
  background: rgba(244, 246, 246, 1);
  border-radius: 30px;
  font-size: 20rpx;
  color: #999999;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
}

.selsect-norms .material-selection-box .selection-list .list .item.cur {
  border: 1px solid #3390FF;
  color: #3390FF;
}

.selsect-norms .have-chosen-box{
  padding: 0 30rpx;
}

.selsect-norms .have-chosen-box .have-chosen-btn {
  height: 80rpx;
  background: rgba(51, 144, 255, 1);
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: normal;
  width: 100%;
}

.selsect-norms .have-chosen-box .have-chosen-btn:active{
  opacity: 0.6;
}

.black-background {
  position: fixed;
  z-index: 3;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
}