.container{
  height: auto;
}
.box {
  /* background: rgba(255, 255, 255, 1); */
  /* box-shadow: 0px 7rpx 27rpx 0rpx rgba(0, 0, 0, 0.05); */
  border-radius: 10rpx;
  /* position: relative;
  top: 20rpx; */
  padding: 0 30rpx;
  padding-top: 20rpx;
}

.box .item {
  background: #fff;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.flexBox {
  display: flex;
  align-items: center;
}

.shopImgs image {
  width: 120rpx;
  height: 120rpx;
}

.product-name {
  color: #2a2a2a;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 15rpx;
}

.product-name .product-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
  vertical-align: middle;
  margin-top: -5rpx;
}

.product-size-name {
  color: #999;
  font-size: 22rpx;
  margin-bottom: 15rpx;
}

.product-type-list {
  display: flex;
  font-size: 20rpx;
  color: #666;
}

.product-type-list .item {
  background: #f3f3f3;
  border-radius: 10rpx;
  height: 28rpx;
  margin-right: 15rpx;
  padding: 0 10rpx;
}

.product-list {
  display: flex;
  font-family: Source Han Sans CN;
  padding-left: 20rpx;
  width: 100%;
}

.moneyBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.money {
  color: #ff2522;
  font-size: 36rpx;
  font-weight: 500;
}

.detail {
  width: 100%;
}

.monBottomBox {
  background: #fff;
  box-shadow: 0px 7rpx 27rpx 0px rgba(0, 0, 0, 0.05);
  border-radius: 10rpx;
}

.monBottomBox .flexBox {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  margin: 0 30rpx;
  border-bottom: 1px solid #e4e9f0;
}

.monBottomBox .flexBox:last-child {
  border-bottom: 0;
}

.bottomLeftFont {
  font-size: 28rpx;
  color: #2a2a2a;
}

.bottomMoney {
  color: #ff2522;
  font-size: 36rpx;
}

.bottomMoneyWei {
  color: #2a2a2a;
  font-size: 36rpx;
}

.foot-btn-group {
  display: flex;
  margin-top: 140rpx;
  padding-bottom: 60rpx;
}

.foot-btn-group .item-btn {
  width: 315rpx;
  height: 80rpx;
  border-radius: 39rpx;
  font-size: 28rpx;
  font-weight: normal;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.foot-btn-group .item-btn:active{
  opacity: 0.6;
}
.foot-btn-group .item-btn.left-btn{
  background: #3390FF;
}
.foot-btn-group .item-btn.right-btn{
  background: #B5B5B5;
  color: #fff;
}


.flexMon{
  display: flex;
  justify-content: space-between;
}
